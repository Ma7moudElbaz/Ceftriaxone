<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".speciality.indications.Indication_04_ped">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Acute otitis media (AOM):"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/text_blue"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="For the initial treatment of Neonates, infants and
children 15 days to 12 years of age (\u003C 50 kg):"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/indication_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/brown_text"
                android:textSize="@dimen/text_brown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" mg/kg/day"
                android:textColor="@color/brown_text"
                android:textSize="@dimen/text_brown" />

        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/slide_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/indication_bottom_bg"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dosage"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_dosage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/white_curved"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:text="50"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="mg/Kg"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:background="@color/gray_text" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Weight"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/white_curved"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold"
                    android:inputType="number" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Kg"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="For obese children, the maximum dose should be
calculated based on ideal bodyweight for their gender and age."
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_gray_s" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_curved"
                android:padding="5dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="The maximum single dose of lidocaine in children shouldn't exceed 5mg/Kg"
                android:textColor="@color/black"
                android:textSize="@dimen/text_gray_s" />
        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/slide_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="20dp"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/indication_bottom_bg"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Dose ="
                    android:textColor="@color/red_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="2"
                    android:text="1500-2400"
                    android:background="@drawable/white_curved"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="mg/day"
                    android:textColor="@color/red_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Frequency"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_black"
                    android:textColor="@color/black_text"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Single Dose"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_black"
                    android:textColor="@color/black_text"
                    android:background="@drawable/white_curved"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:id="@+id/info"
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_question" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Route of Administration"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_black"
                    android:textColor="@color/black_text"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="I.M"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_black"
                    android:textColor="@color/black_text"
                    android:background="@drawable/white_curved"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/prev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_curved"
                android:padding="5dp"
                android:src="@drawable/ic_prev"
                app:tint="@color/white" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>