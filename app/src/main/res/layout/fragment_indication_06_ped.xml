<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".speciality.indications.Indication_06_ped">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Pre-operative prophylaxis of surgical site infections:"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/text_blue"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="For Neonates, infants and children 15
days to 12 years of age (\u003C 50 kg):"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/indication_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/brown_text"
                android:textSize="@dimen/text_brown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" mg/kg/day"
                android:textColor="@color/brown_text"
                android:textSize="@dimen/text_brown" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="a single pre-operative dose."
            android:textColor="@color/gray_text"
            android:textSize="@dimen/text_brown" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/slide_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dosage"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_dosage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/white_curved"
                    android:elevation="2.5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mg/Kg"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Weight"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/white_curved"
                    android:elevation="2.5dp"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kg"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/hint_text_bg"
                android:padding="10dp">

                <com.lockwood.compound.CompoundTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For obese children, the maximum dose should be
calculated based on ideal bodyweight for their gender and age."
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_gray_s"
                    app:drawableGravity="top"
                    app:drawablePadding="10dp"
                    app:drawableStart="@drawable/ic_hand" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_curved"
                android:padding="5dp"
                android:src="@drawable/ic_next"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="The maximum single dose of lidocaine in children shouldn't exceed 5mg/Kg"
                android:textColor="@color/black"
                android:textSize="@dimen/text_gray_s" />

        </LinearLayout>


    </ScrollView>

    <ScrollView
        android:id="@+id/slide_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dose ="
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/white_curved"
                    android:elevation="2.5dp"
                    android:padding="10dp"
                    android:text="1500-2400"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="mg/day"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Frequency"
                    android:textColor="@color/blue_text"
                    android:textSize="@dimen/text_black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/white_curved"
                    android:elevation="2.5dp"
                    android:padding="10dp"
                    android:text="Single dose administered 30-90 min. prior to surgery"
                    android:textColor="@color/black_text"
                    android:textSize="@dimen/text_black" />

            </LinearLayout>


            <ImageView
                android:id="@+id/prev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_curved"
                android:padding="5dp"
                android:src="@drawable/ic_prev"
                app:tint="@color/white" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>