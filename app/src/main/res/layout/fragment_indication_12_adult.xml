<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".speciality.indications.Indication_12_adult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Disseminated Lyme borreliosis (early
[Stage II] and late [Stage III]):"
            android:textStyle="bold"
            android:textSize="@dimen/text_blue"
            android:textColor="@color/blue_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For adults and children over 12 years
of age (â‰¥50 kg):"
            android:textSize="@dimen/text_gray"
            android:textColor="@color/gray_text"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/indication_bottom_bg"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dosage"
                android:textStyle="bold"
                android:textSize="@dimen/text_black"
                android:textColor="@color/black_text"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="2 g"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/text_black"
                android:textColor="@color/black_text"
                android:background="@drawable/white_curved"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Frequency"
            android:textStyle="bold"
            android:textSize="@dimen/text_black"
            android:textColor="@color/black_text"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Once Daily"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_black"
            android:textColor="@color/black_text"
            android:background="@drawable/white_curved"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Treatment Duration"
                android:textStyle="bold"
                android:textSize="@dimen/text_black"
                android:textColor="@color/black_text"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="14-21 Days"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/text_black"
                android:textColor="@color/black_text"
                android:background="@drawable/white_curved"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_question" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>